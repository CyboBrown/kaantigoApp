<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonTabFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_lesson1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:animateLayoutChanges="true"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="4dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lesson 1 - Core Grammar"
                                    android:textAppearance="?attr/textAppearanceHeadline6" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Secondary Text"
                                    android:textAppearance="?attr/textAppearanceBody2"
                                    android:textColor="?android:attr/textColorSecondary" />

                                <!--                    <TextView-->
                                <!--                        android:layout_width="wrap_content"-->
                                <!--                        android:layout_height="wrap_content"-->
                                <!--                        android:layout_marginTop="16dp"-->
                                <!--                        android:text="Supporting Text"-->
                                <!--                        android:textAppearance="?attr/textAppearanceBody2"-->
                                <!--                        android:textColor="?android:attr/textColorSecondary" />-->
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/expand_card"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:src="@drawable/ic_expand_more" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cardop_lesson1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="4dp"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/btn1"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Case Markers" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/btn2"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:enabled="false"
                                android:text="Personal Pronouns" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible" />

                            <Button
                                android:id="@+id/btn3"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:enabled="false"
                                android:text="Demonstrative Pronouns" />

                            <com.google.android.material.divider.MaterialDivider
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible" />

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <com.google.android.material.chip.ChipGroup
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingTop="4dp"
                                        app:singleLine="true">

                                        <com.google.android.material.chip.Chip
                                            android:id="@+id/chip_personal_pronouns"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Personal Pronouns"
                                            app:chipIcon="@drawable/ic_table"
                                            app:chipStartPadding="6dp"
                                            app:textStartPadding="6dp" />

                                        <com.google.android.material.chip.Chip
                                            android:id="@+id/chip_demonstrative_pronouns"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:enabled="false"
                                            android:text="Demonstrative Pronouns"
                                            app:chipIcon="@drawable/ic_table"
                                            app:chipStartPadding="6dp"
                                            app:textStartPadding="6dp" />

                                        <!--                                    app:chipIconTint="@color/icon_tint"-->

                                    </com.google.android.material.chip.ChipGroup>
                                </LinearLayout>
                            </HorizontalScrollView>


                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_lesson1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>